{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "comma-dangle": ["error", "never"],
        "strict": "error",
        "import/prefer-default-export": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "max-len": [1, 200],
        "consistent-return": "off"
    }
}